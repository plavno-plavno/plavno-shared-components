{
  "compilerOptions": {
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "noUnusedLocals": true,
    "types": ["vite/client", "node"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/typings.d.ts"
  ]
}
